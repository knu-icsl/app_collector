<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Sensor">

        <SwitchPreferenceCompat
            app:key="option_gps_enable"
            app:title="Collect GPS Data"
            app:defaultValue="true"/>
    </PreferenceCategory>


    <PreferenceCategory app:title="Wifi">
        <SwitchPreferenceCompat
            app:key="option_wifi_enable"
            app:title="Collect Wifi Data"
            app:defaultValue="true"/>

        <ListPreference
            app:key="option_wifi_source"
            app:dependency="option_wifi_enable"
            app:defaultValue="rtt"
            app:entries="@array/wifi_source"
            app:entryValues="@array/wifi_source_value"
            app:title="Collect Data Type"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="option_ftm_bandwidth"
            app:dependency="option_wifi_enable"
            app:defaultValue="1"
            app:entries="@array/ftm_bandwidth"
            app:entryValues="@array/ftm_bandwidth_value"
            app:title="FTM Bandwidth"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

